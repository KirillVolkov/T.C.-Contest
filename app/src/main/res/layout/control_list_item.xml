<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_margin="8dp"
              android:background="@drawable/gray_back_cornered"
              android:layout_width="wrap_content"
              android:padding="6dp"
              android:layout_height="wrap_content">
    <com.telegram.tgc.widget.CircleBackgroundImageView
            android:id="@+id/iv_checkmark"
            android:layout_width="24dp"
            tools:background="@drawable/tools_circle"
            app:circle_color="@android:color/holo_red_light"
            android:layout_height="24dp"/>
    <androidx.appcompat.widget.AppCompatTextView
            tools:text="Left"
            android:id="@+id/tv_name"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>
</LinearLayout>